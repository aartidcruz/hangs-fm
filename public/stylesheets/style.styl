// use nib
@import 'nib'
@import url('https://fonts.googleapis.com/css2?family=PT+Mono&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

// varaibles
color-grey = #f5f5f5
color-purple = #f5f5f5

body
    padding 50px
    font-family 'Space Mono', monospace
    font-size 20px

a
    color #00b7ff

#chat-box
    width 363px
    height 632px
    left 1051px
    top 134px
    background #FFFFFF
    border 2px solid #000000
    box-sizing border-box
    margin 0 auto
    filter drop-shadow(4px 4px 0px rgba(0, 0, 0, 0.4))

ul , li
    list-style-type none

ul
    padding 20px
    margin 0

li
    padding 0
    margin 5px 0

#add-mates
  background #7E2FFF
  border 2px solid #000000
  box-sizing border-box
  color #fff
  text-align center
  padding 20px
  p
    font-style normal
    font-weight bold
    line-height 125%
    text-align center
    color #FFFFFF
    margin 0
    padding 0

#add-mates-link
    background white
    color black
    padding 10px
    margin 10px 0
    position relative
    p
      margin 0
      font-size 16px
      display inline-block
      line-height 16px

#send
    background url('/images/send.svg') no-repeat top left
    background-size 20px 20px
    width 20px
    height 20px
    vertical-align middle

#copy-link
    display inline-block
    vertical-align middle
    height 20px

#messages-container
  padding 20px

#message-input
  resize none
  background rgba(126, 47, 255, 0.09)
  border-radius 10px
  border none
  text-decoration none
  color white
  padding 16px
  margin 0 15px 0 0
  cursor pointer
  font-family PT Mono
  font-style normal
  font-size 20px
  line-height 125%
  color #727272

#user-stat
  text-align center
  line-height 125%
  font-size 16px
  color #727272

button,
input[type="submit"],
input[type="reset"]
  background none
  color inherit
  border none
  padding 0
  font inherit
  cursor pointer
  outline inherit
